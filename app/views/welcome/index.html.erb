<h1>Welcome</h1>

<div class="button_group">
  <% if current_user %>
    <h1><%= link_to "Log out", session_path, class: "button", data: { turbo_method: :delete, turbo_confirm: "Bạn có muốn đăng xuất không?" } %></h1>
  <% else %>
    <h1><%= link_to "Login", new_session_path, class: "button login" %></h1>
    <h1><%= link_to "Sign up", new_user_path, class: "button signup" %></h1>
  <% end %>
</div>
